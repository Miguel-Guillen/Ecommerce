@using Ecommerce.Models.ViewModels
@model SellerVM
@{
    ViewData["Title"] = "New Seller";
}

<div class="min-vh-75 d-flex align-items-center">
    <div class="seller-container bg-dark text-white rounded border border-secondary p-4">
        <form asp-action="AddSeller">
        <h5 class="text-white">Nuevo Vendedor</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mt-4">
                <div class="col-6">
                    <label class="form-label" asp-for="Name">Nombre <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Name" type="text">
                    <span asp-validation-for="Name" class="text-danger mt-1"></span>
                </div>
                <div class="col-6">
                    <label class="form-label" asp-for="LastName">Apellidos <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="LastName" type="text">
                    <span asp-validation-for="LastName" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label class="form-label" asp-for="Cellphone">Telefono <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Cellphone" type="text">
                    <span asp-validation-for="Cellphone" class="text-danger mt-1"></span>
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="Address">Direccion <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Address" type="text">
                    <span asp-validation-for="Address" class="text-danger mt-1"></span>
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="City">Estado <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="City" type="text">
                    <span asp-validation-for="City" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label class="form-label" asp-for="Email">Correo <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Email" type="email">
                    <span asp-validation-for="Email" class="text-danger mt-1"></span>
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="Password">Contrase√±a <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Password" type="password">
                    <span asp-validation-for="Password" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success float-end" type="submit">
                    <i class="bi bi-plus-circle me-1"></i>
                    Enviar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}