@using Ecommerce.Models.ViewModels
@model ProductVM
@{
    ViewData["Title"] = "New product";
}

<div class="min-vh-75 d-flex align-items-center">
    <div class="product-container bg-dark text-white rounded border border-secondary p-4">
        <form asp-action="AddProduct">
        <h5 class="text-white">Nuevo producto</h5>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mt-4">
                <div class="col-6">
                    <label class="form-label" asp-for="Name">Nombre <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Name" type="text">
                    <span asp-validation-for="Name" class="text-danger mt-1"></span>
                </div>
                <div class="col-6">
                    <label class="form-label" asp-for="Description">Descripcion <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Description" type="text">
                    <span asp-validation-for="Description" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label class="form-label">Vendedor <span class="text-danger">*</span> </label>
                    <select class="form-select form-select-sm" asp-for="SellerId" asp-items="ViewBag.Sellers">
                        <option selected value="Seleccionar">Seleccionar</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger mt-1"></span>
                </div>
                <div class="col-4">
                    <label class="form-label">Categoria <span class="text-danger">*</span> </label>
                    <select class="form-select form-select-sm" asp-for="Category" asp-items="ViewBag.Category">
                        <option selected value="Seleccionar">Seleccionar</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger mt-1"></span>
                </div>
                <div class="col-4">
                    <label class="form-label">Tipo de envio <span class="text-danger">*</span> </label>
                    <select class="form-select form-select-sm" asp-for="ShippingType" asp-items="ViewBag.ShippingType">
                        <option selected value="Seleccionar">Seleccionar</option>
                    </select>
                    <span asp-validation-for="ShippingType" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-4">
                    <label class="form-label" asp-for="Cost">Costo <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Cost" type="number">
                    <span asp-validation-for="Cost" class="text-danger mt-1"></span>
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="Discount">Descuento <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Discount" type="number">
                    <span asp-validation-for="Stock" class="text-danger mt-1"></span>
                </div>
                <div class="col-4">
                    <label class="form-label" asp-for="Stock">Reservas <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Stock" type="number">
                    <span asp-validation-for="Stock" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <label class="form-label" asp-for="Img">Imagen <span class="text-danger">*</span> </label>
                    <input class="form-control form-control-sm" asp-for="Img" type="url">
                    <span asp-validation-for="Stock" class="text-danger mt-1"></span>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-success float-end" type="submit">
                    <i class="bi bi-plus-circle me-1"></i>
                    Enviar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}