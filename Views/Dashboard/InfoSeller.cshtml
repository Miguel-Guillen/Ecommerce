@using Ecommerce.Models;
@model Seller
@{
    ViewData["Title"] = "Info Seller";
}

<div class="p-4">
    <div class="info-seller d-flex justify-content-between border rounded shadow mt-4">
        <div class="col-md-3 text-center p-3">
            <h6 class="mb-2">@Model.Name</h6>
            <p class="my-1">@Model.LastName</p>
            <div class="row mt-5 px-3">
                <button type="button" class="btn btn-warning text-white" data-bs-toggle="modal" data-bs-target="#editSeller">
                    <i class="bi bi-pen"></i>
                    Editar
                </button>
                <button type="button" class="btn btn-danger mt-1" data-bs-toggle="modal" data-bs-target="#deleteSeller">
                    <i class="bi bi-trash"></i>
                    Eliminar
                </button>
            </div>
        </div>
        <div class="col-md-9 p-3">
            <div class="row">
                <div class="col-6">
                    <h6 class="mb-3">Datos del Vendedor</h6>
                    <p class="my-1">Nombre: @Model.Name</p>
                    <p class="my-1">Apellidos: @Model.LastName</p>
                    <p class="my-1">Ingreso: @Model.Date.ToString("ddd d MMM")</p>
                </div>
                <div class="col-6">
                    <h6 class="mb-3">Contacto</h6>
                    <p class="my-1">
                        <i class="bi bi-telephone"></i>
                        @Model.Cellphone
                    </p>
                    <p class="my-1">
                        <i class="bi bi-envelope"></i>
                        @Model.Email
                    </p>
                    <h6 class="mt-3 mb-2">Ubicacion</h6>
                    <p class="my-1">
                        <i class="bi bi-house"></i>
                        @Model.City
                    </p>
                    <p class="my-1">
                        <i class="bi bi-geo-alt"></i>
                        #@Model.Address
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

